<?xml version="1.0" ?>
<node>
  <node flags="camera">
    <module id="material" value="camera"/>
    <method id="draw" value="Example02Camera"/>
  </node>
  <!-- By default the camara is at point (0,0,0) looking down negative z-axis -->
  <node flags="object">
    <translate x="0" y="-10" z="-20"/>
    <rotatex angle="90"/>
    <mesh id="geometry" value="plane.mesh"/>
    <method id="draw" value="mesh02Method"/>
    <module id="material" value="perspective"/>
  </node>

  <node flags="object">
    <translate x="0.0" y="0" z="-10.0"/>
    <rotatex angle="45"/>
    <rotatey angle="45"/>
    <mesh id="geometry" value="cube.mesh"/>
    <method id="draw" value="mesh02Method"/>
    <module id="material" value="perspective"/>
  </node>
  <node flags="object">
    <translate x="-2.0" y="2.0" z="-5.0"/>
    <rotatex angle="45"/>
    <rotatey angle="45"/>
    <scale x="0.5" y="0.5" z="0.5"/>
    <mesh id="geometry" value="cube.mesh"/>
    <method id="draw" value="mesh02Method"/>
    <module id="material" value="perspective"/>
  </node>
  <node flags="object">
    <translate x="2.0" y="-3.0" z="-8.0"/>
    <rotatex angle="45"/>
    <rotatey angle="45"/>
    <scale x="0.3" y="0.3" z="0.3"/>
    <mesh id="geometry" value="cube.mesh"/>
    <method id="draw" value="mesh02Method"/>
    <module id="material" value="perspective"/>
  </node>
</node>
