<?xml version="1.0" ?>
<node>
  <node flags="camera">
    <module id="material" value="camera"/>
    <method id="draw" value="Example02Camera"/>
  </node>
  <node flags="object">
    <!-- By default the camara is at point 0,0,0 looking down negative z-axis -->
    <translate x="0" y="-10" z="-20"/>
    <rotatex angle="90"/>
    <mesh id="geometry" value="plane.mesh"/>
    <method id="draw" value="mesh02Method"/>
    <module id="material" value="perspective"/>
  </node>
  <node flags="object">
    <translate x="0" y="0" z="-5"/>
    <rotatex angle="45"/>
    <rotatez angle="45"/>
    <mesh id="geometry" value="cube.mesh"/>
    <method id="draw" value="mesh02Method"/>
    <module id="material" value="perspective"/>
  </node>
</node>
